# Variables d'environnement pour le frontend et backend

# ==============================================
# FRONTEND (Variables Vite - préfixe VITE_)
# ==============================================

# URL de l'API backend
VITE_API_URL=http://localhost:3001/api

# Nom de l'application
VITE_APP_NAME=HPD Hospitalisation

# Environment frontend
VITE_NODE_ENV=development

# ==============================================
# BACKEND (Variables Node.js)
# ==============================================

# Configuration de l'application
NODE_ENV=production
PORT=3001

# Configuration de la base de données
DATABASE_URL=postgresql://hpd_user:hpd_password@database:5432/hpd_hospital
DB_HOST=database
DB_PORT=5432
DB_NAME=hpd_hospital
DB_USER=hpd_user
DB_PASSWORD=hpd_password

# Configuration JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-very-long-and-secure
JWT_EXPIRES_IN=24h

# Configuration CORS
CORS_ORIGIN=http://localhost:3000

# Configuration Redis
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Configuration des logs
LOG_LEVEL=info

# Configuration de l'email (optionnel)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@hpd.com

# Configuration du stockage de fichiers
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# Configuration de sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
